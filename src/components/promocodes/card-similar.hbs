<div class="promocode-card similar-card d-flex flex-column flex-tb-row align-items-tb-start w-100">
    <img src="{{image}}" alt="gap" class="pe-lg-2 similar-card__image">
    <div class="ms-tb-4 w-100 mt-1 mt-sm-2 mt-tb-0">
        <div class="promocode-card__content d-flex align-items-start align-items-tb-center justify-content-between w-100">
            <div>
                <p class="text-large promocode-card__titl color-secondary pe-2">{{title}}</p>
                <div class="d-flex align-items-center mt-2">
                    <button class="btn btn-orange btn-arrow me-2 d-sm-none">
                        {{> _images/arr}}
                    </button>
                    <div class="promocode-card__clock d-flex align-items-center">
                        {{> _images/clock}}
                        <p class="color-secondary ms-1">
                            <span class="color-secondary font-light d-none d-tb-inline">Истекает</span>
                            20 мая 2023
                        </p>
                    </div>
                </div>
            </div>
            <div class="promocode-card__button d-none d-sm-flex flex-shrink">
                 <button class="btn btn-orange btn-promo mt-1 js--promo-btn">
                     <span class="js--promo-text">Показать промокод</span>
                     <span class="js--promo d-none">RTYQWE</span>
                     {{> _images/btn}}
                 </button>
            </div>
        </div>
    </div>
</div>