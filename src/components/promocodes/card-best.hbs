<div class="promocode-card best-card d-flex flex-column align-items-center justify-content-between w-100" data-show-modal="overlay-discount" data-modal-promo>
    <div>
        <div class="best-card__image w-100 d-flex justify-content-center align-items-center">
            <img src="{{images}}" alt="promo" class="image-contain">
        </div>
        <p class="text-large promocode-card__title text-center mt-2 mt-md-3">{{title}}</p>
    </div>
    <div class="promocode-card__button d-flex flex-shrink">
        <button class="btn btn-orange btn-promo mt-2 mt-md-3">
            <span class="d-none d-sm-flex">Показать промокод</span>
            <span class="d-sm-none">Промокод</span>
            <span class="d-none d-sm-block">
                {{> _images/btn}}
            </span>
        </button>
    </div>
</div>